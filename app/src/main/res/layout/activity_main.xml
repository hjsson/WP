<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBg"
        android:weightSum="140">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:layout_weight="8">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="2019년 9월 1일 오전 9시 15분"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="240"
            android:layout_weight="12">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="28"
                android:gravity="center"
                android:textSize="23sp"
                android:text="누적 횟수 :"/>
            <TextView
                android:id="@+id/tv_total_cnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textSize="23sp"
                android:gravity="center"
                android:text="0"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="RESET"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="25"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/btn_ble_conn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="BLE 연결"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="25"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:gravity="center"
                android:textSize="21sp"
                android:text="Washer Pump"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"/>
            <TextView
                android:id="@+id/tv_top_state"
                android:layout_width="0dp"
                android:textSize="21sp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="33"
                android:text="PASS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="240"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="165"/>
            <TextView
                android:id="@+id/tv_top_volt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="center"
                android:textSize="20sp"
                android:text="0.0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="left|center_vertical"
                android:text=" V"/>
            <TextView
                android:id="@+id/tv_top_am"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="center"
                android:textSize="20sp"
                android:text="0.0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="left|center_vertical"
                android:text="A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="220"
            android:layout_weight="77">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"/>
            <LinearLayout
                android:background="@drawable/bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="81"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_weight="185">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="172"
                    android:layout_weight="12">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"/>
                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="0dp"
                        android:text="수 정"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"/>
                    <EditText
                        android:id="@+id/et_set_top_cnt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:inputType="number"
                        android:maxLength="3"
                        android:hint="0"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="회"
                        android:layout_weight="5"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"/>
                    <Button
                        android:id="@+id/btn_insert"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="입 력"
                        android:textSize="16sp"
                        android:layout_weight="30"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="170"
                    android:layout_weight="10">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"/>
                    <EditText
                        android:id="@+id/et_set_pump_cnt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:hint="0"
                        android:background="@color/colorWhite"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="회"
                        android:layout_weight="5"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"/>
                    <EditText
                        android:id="@+id/et_set_volt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="2"
                        android:layout_weight="9"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="."
                        android:layout_weight="2"/>
                    <EditText
                        android:id="@+id/et_set_volt_dec"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="V 이하"
                        android:layout_weight="15"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                    <EditText
                        android:id="@+id/et_set_am"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="2"
                        android:layout_weight="9"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="."
                        android:layout_weight="2"/>
                    <EditText
                        android:id="@+id/et_set_am_dec"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="A 이상"
                        android:layout_weight="15"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="27"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="170"
                    android:layout_weight="10">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="32"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ON"
                        android:textSize="20sp"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="OFF"
                        android:textSize="20sp"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"/>
                    <EditText
                        android:id="@+id/et_set_delay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="3"
                        android:background="@color/colorWhite"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="분"
                        android:layout_weight="5"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1/"
                        android:layout_weight="5"/>
                    <EditText
                        android:id="@+id/et_set_flooding"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="3"
                        android:layout_weight="15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="회"
                        android:layout_weight="5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="170"
                    android:layout_weight="9">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"/>
                    <EditText
                        android:id="@+id/et_set_on"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="3"
                        android:layout_weight="11"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="초"
                        android:layout_weight="5"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"/>
                    <EditText
                        android:id="@+id/et_set_off"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="3"
                        android:layout_weight="11"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="초"
                        android:layout_weight="5"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="75"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_weight="21">
                <Button
                    android:id="@+id/btn_washer"
                    android:text="Washer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="15sp"
                    android:layout_weight="15"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"/>
                <Button
                    android:id="@+id/btn_drain"
                    android:text="입 수"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="16sp"
                    android:layout_weight="15"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"/>
                <Button
                    android:id="@+id/btn_vent"
                    android:text="출 수"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="0dp"
                    android:layout_weight="15"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="225"
            android:orientation="horizontal"
            android:layout_weight="13">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11"/>
            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="시 작"
                android:textSize="16sp"
                android:layout_weight="30"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"/>
            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="멈 춤"
                android:textSize="16sp"
                android:layout_weight="30"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"/>
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="match_parent"
                android:text="계 속"
                android:layout_weight="30"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"/>
            <Button
                android:id="@+id/btn_conn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="종 료"
                android:layout_weight="30"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>